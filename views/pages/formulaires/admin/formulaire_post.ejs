<form action="/administration/post/register" enctype="multipart/form-data" method="post" class="form">
        
  <div class="row">
      <div class="row">
        <div class="input-field col s12">
          <textarea id="message"  name="message" class="materialize-textarea"></textarea>
          <label for="textarea1">Ecrire le message</label>
        </div>
      </div>
  </div>

    <div class="file-field input-field">
      <div class="btn">
        <span>Image...</span>
        <input type="file" id="file" name="files" autocomplete="off">
      </div>
      <div class="file-path-wrapper">
        <input class="file-path validate" type="text">
      </div>
    </div>

    <button type="submit" class="btn waves-effect waves-light" name="action">Envoyer
        <i class="material-icons right">send</i>
    </button>
</form>
