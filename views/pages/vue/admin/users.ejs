        <div id="user-swipe-contrat" class="col s12"></div>
        <div id="user-swipe-demandes" class="col s12 green"></div>
    </div>
    <div class="modal-footer">
        <div class="row suppr_margin">
            <div class="col m6 s6">
                <div class="switch valign-wrapper">
                    <label id="edition_mode">
                        Lecture
