        <div class="main-container">

<div id="filterUser" class="container">
    <h5>Filtre</h5>
    <div class="row">
        <div class="col m2 s2">

            <h6>Nom: </h6>
        </div>
        <div class="col m4  s9">
            <div class="container">
                <div class="switch valign-wrapper">
                    <label>
                        
                            <input id="filter_alphabet_name" type="checkbox">
                            <span class="lever"></span>
                        A à Z
                    </label>
                </div>
            </div>
        </div>
        
        <div class="col m2 s2">

                    <h6>Numéro client: </h6>
        </div>
        <div class="col m4 s9">
            <div class="container">
                <div class="switch valign-wrapper">
                    <label>

                            <input id="filter_nclient" type="checkbox">
                            <span class="lever"></span>
                            Plus petit au plus grand
                    </label>
                </div>
            </div>
         </div>
    </div>
</div>

<div class='container-fluid'>
 <table class="highlight">
    <thead>
        <tr>
            <th>Numero client</th>
            <th>Civilité</th>
            <th>Nom</th>
            <th>Prénom</th>
            <th>E-mail</th>
            <th>Téléphone</th>
            <th>code Postal</th>
            <th>Ville</th>
            <th>Profil</th>
        </tr>
    </thead>
<tbody id="table_users"></tbody>
</table>
</div>

    </div>
