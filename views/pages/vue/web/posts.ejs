<% include ../../../partials/_header %>
  
<% posts.forEach(function(post) { %>
    <div class="ui items">
        <div class="item">
            <div class="image">
                <img src="/assets/img/posts/<%= post.path %>">
            </div>
            <div class="content">
                <a class="header">header</a>

                <div class="meta">
                    <span>Description</span>
                </div>
                
                <div class="description">
                    <p><%= post.message %></p>
                </div>

                <div class="extra">
                    Additional Details
                </div>
            </div>
        </div>
    </div>
  
    <% }); %>
<% include ../../../partials/_footer %>